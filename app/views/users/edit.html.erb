<div class="page-header">
  <h1>Edit Account Information</h1>
</div>

<%= form_tag user_path(@user.id), method: "patch" do%>

  <p>
    <%= label_tag :name %>
    <%= text_field_tag :name, @user.name %>
  </p>

  <p>
    <%= label_tag :email %>
    <%= text_field_tag :email, @user.email %>
  </p>

  <p>
    <%= label_tag :age %>
    <%= text_field_tag :age, @user.age %>
  </p>

  <p>
    <%= label_tag :sex %>
    <%= select_tag :sex, options_for_select([ "male", "female" ], @user.sex) %>
 </p>

   <p>
     <%= label_tag :region %>
     <%= select_tag :region, options_for_select([ "California", "Illinois", "New York" ], @user.region) %>
  </p>

  <p>
    <%= label_tag :status %>
    <%= text_field_tag :status, @user.status %>
  </p>

  <%= submit_tag "Update!" %>

<% end %>
