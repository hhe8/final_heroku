<div class="page-header">
  <h1>People</h1>
<%if @user%>
<p> Status:
<%=@user.status%>
</p>
<%end%>

<% if session[:user_id] %>
  Welcome! <%= User.find(session[:user_id]).name %>
<% end %>
  <p> click name to see the profile of other users </p>
<div>

<ul>
  <% @users.each do |user| %>
    <li><%= link_to user.name, "/profile/#{user.id}"%>
        <% if session[:user_id]%>
        <%= form_tag follows_path do%>
        <%= hidden_field_tag :id, user.id%>
        <%= submit_tag '(Follow)'%>
        <%end%>
        <%end%>
    </li>

  <% end %>
</ul>
