<div class="page-header">
  <h1>Sign Up</h1>
</div>

<% if @user.errors.any? %>
  <ul class="list-unstyled text-danger">
    <% @user.errors.full_messages.each do |msg| %>
      <li><strong><%= msg %></strong></li>
    <% end %>
  </ul>
<% end %>

<%= form_tag users_path do %>

  <p>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </p>

  <p>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </p>

  <p>
    <%= label_tag :age %>
    <%= text_field_tag :age %>
  </p>


  <p>
    <%= label_tag :sex %>
    <%= select_tag :sex, options_for_select([ "male", "female" ], "male") %>
 </p>

  <p>
    <%= label_tag :password %>
    <!-- <%= text_field_tag :password %> -->
    <%= password_field_tag :password %>
  </p>

  <p>
    <%= label_tag :password_confirmation, "Password Again" %>
    <%= text_field_tag :password_confirmation %>
  </p>

   <p>
     <%= label_tag :region %>
     <%= select_tag :region, options_for_select([ "California", "Illinois", "New York" ], @user.region) %>
  </p>

  <%= submit_tag "Sign Me Up!" %>

<% end %>
